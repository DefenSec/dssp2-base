;;

(constrain (all_files (create_relabelfrom_relabelto))
           (or (or (eq r1 r2)
                   (and
                    (eq t1
                        rbac_obj_sys_role_change_exemption_subj_type_attribute)
                    (eq r2 rbac_sys_role_attribute)))
